@model Category

@{
    Layout = "_LoginLayout";
}

<div class="row">
    <div class="col-12 mb-3">
        <h2><a href="/Category/Index"><i class="bi bi-arrow-left"></i></a> Create New Category</h2>
    </div>
</div>

<div class="row">
    <form action="/Category/Create" method="post">
        <div class="mb-3">
            <label for="CategoryName" class="form-label">Category Name</label>
            <input type="text" class="form-control" id="CategoryName" name="Name" value="@Model.Name">
            <span asp-validation-for="Name" class="text-warning"></span>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>